<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	
	
	
	<servlet>
        <servlet-name>Message</servlet-name>
        <servlet-class>blog.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Message</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Subscribe</servlet-name>
        <servlet-class>blog.SubscribeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Subscribe</servlet-name>
        <url-pattern>/subscribe</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Unsubscribe</servlet-name>
        <servlet-class>blog.Unsubscribe</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Unsubscribe</servlet-name>
        <url-pattern>/unsubscribe</url-pattern>
    </servlet-mapping>
    
        <servlet>
	        <servlet-name>Email</servlet-name>
	        <servlet-class>blog.DailyUpdate</servlet-class>
	    </servlet>
	    <servlet-mapping>
	        <servlet-name>Email</servlet-name>
	        <url-pattern>/dailyreport</url-pattern>
	    </servlet-mapping>


    <welcome-file-list>
		<welcome-file>blog.jsp</welcome-file>
	</welcome-file-list>

</web-app>

